    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <!-- Add libraries -->
        <dependencySet>
            <outputDirectory>stroom-app/lib</outputDirectory>
            <includes>
                <include>stroom:stroom-app</include>
                <include>stroom:stroom-util</include>
                <include>stroom:stroom-proxy-repo</include>
                <include>mysql:mysql-connector-java</include>
            </includes>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <!-- Add everything else except shell scripts -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>stroom-app/**</include>
            </includes>
            <excludes>
                <exclude>**/*.sh</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
        <!-- Add shell scripts separately to set permissions -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>stroom-app/**/*.sh</include>
            </includes>
            <excludes>
                <exclude>**/dev*.sh</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0750</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
