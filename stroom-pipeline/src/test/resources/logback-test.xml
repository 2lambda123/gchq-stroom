<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="stroom" level="info" />

    <logger name="stroom.pipeline" level="debug" />

    <logger name="stroom.pipeline.reader" level="debug" />

    <logger name="stroom.pipeline.refdata" level="debug" />
    
<!--    <logger name="stroom.pipeline.refdata.store.offheapstore.RefDataOffHeapStore" level="debug" />-->

<!--    <logger name="stroom.pipeline.refdata.store.offheapstore.databases.KeyValueStoreDb" level="trace" />-->


<!--    <logger name="stroom.pipeline.refdata.util" level="trace" />-->

<!--    <logger name="stroom.pipeline.refdata.ReferenceDataFilter" level="trace" />-->

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>