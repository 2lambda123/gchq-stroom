stroom.url.doc-ref.service.ElasticIndex=http://IP_ADDRESS:8299
stroom.url.doc-ref.ui.AnnotationsIndex=http://IP_ADDRESS:5001
stroom.url.doc-ref.ui.ElasticIndex=http://IP_ADDRESS:5002
