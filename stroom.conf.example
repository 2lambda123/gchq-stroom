#This is an example of the configuration file ~/.stroom/stroom.conf that sets 
#various properties for running stroom in development
#It is also used by travis for configuring stroom's integration tests

#Choose whether Stroom requires authenticated access
stroom.authentication.required=false

stroom.htmlTitle=Development Stroom

stroom.node=node1a
stroom.rack=rack1
stroom.temp=/tmp/stroom/

#Uncomment this to enable browser's right click menu for development
#stroom.ui.oncontextmenu=

#Hibernate properties
stroom.jpaHbm2DdlAuto=validate
stroom.jpaDialect=org.hibernate.dialect.MySQLInnoDBDialect

#Stroom database properties
stroom.jdbcDriverClassName=com.mysql.jdbc.Driver
stroom.jdbcDriverUrl=jdbc:mysql://localhost:3307/stroom?useUnicode=yes&characterEncoding=UTF-8
stroom.jdbcDriverUsername=stroomuser
stroom.jdbcDriverPassword=stroompassword1

#SQL Statistics database properties
stroom.statistics.sql.jdbcDriverClassName=com.mysql.jdbc.Driver
stroom.statistics.sql.jdbcDriverUrl=jdbc:mysql://localhost:3308/statistics?useUnicode=yes&characterEncoding=UTF-8
stroom.statistics.sql.jdbcDriverUsername=stroomuser
stroom.statistics.sql.jdbcDriverPassword=stroompassword1

stroom.security.apiToken=eyJhbGciOiJIUzI1NiJ9.eyJleHAiOjE1MzgyMDQyMDgsInN1YiI6ImFkbWluIiwiaXNzIjoic3Ryb29tIn0.H6P2BjLMKKsuSsjG3Yb6yax_KiJI-pJMipneXV-7czo
#stroom.advertisedUrl=http://localhost:8080
stroom.auth.jwt.issuer=stroom
stroom.auth.jwt.enableTokenRevocationCheck=true
stroom.auth.services.url=http://auth-service:8099
stroom.auth.authentication.service.url=http://auth-service:8099/authentication/v1

stroom.users.ui.url=http://stroom-auth-ui:5000/userSearch
stroom.apikeys.ui.url=http://stroom-auth-ui:5000/tokens
stroom.changepassword.url=http://stroom-auth-ui:5000/changepassword

#Service discovery
#Set this to false to local service lookup when you do not have Zookeeper
stroom.serviceDiscovery.enabled=false

#Kafka
#Set this to blank to prevent stroom from trying to establish a connection
stroom.connectors.kafka.default.bootstrap.servers=localhost:9092
stroom.connectors.kafka.default.connector.version=0.10.0.1

# Elastic
stroom.connectors.elastic.default.transport.hosts=localhost:9300
stroom.connectors.elastic.default.cluster.name=docker-cluster
stroom.connectors.elastic.default.connector.version=5.6.4

# UI URLs
stroom.url.list=annotations-ui,elastic-ui,annotations-service,elastic-service,kibana-ui,dashboard
stroom.url.annotations-ui=http://localhost:5001
stroom.url.annotations-service=http://localhost:8199
stroom.url.elastic-ui=http://localhost:5002
stroom.url.elastic-service=http://localhost:8299
stroom.url.kibana-ui=http://localhost:5601
stroom.url.dashboard=http://localhost:8080/dashboard

# External Doc Ref
stroom.doc-ref.types=AnnotationsIndex,ElasticIndex
stroom.url.doc-ref.service.AnnotationsIndex=http://localhost:8199
stroom.url.doc-ref.service.ElasticIndex=http://localhost:8299
stroom.url.doc-ref.ui.AnnotationsIndex=http://localhost:5001
stroom.url.doc-ref.ui.ElasticIndex=http://localhost:5002
