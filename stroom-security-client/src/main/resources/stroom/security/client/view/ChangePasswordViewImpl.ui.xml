<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:Grid styleName="stroom-control-grid" width="100%">
    <g:row>
      <g:cell>User Name:</g:cell>
      <g:customCell>
        <g:Label ui:field="userName" addStyleNames="stroom-control-label"
          width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Old Password:</g:cell>
      <g:customCell>
        <g:PasswordTextBox ui:field="oldPassword"
          width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>New Password:</g:cell>
      <g:customCell>
        <g:PasswordTextBox ui:field="newPassword"
          width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Confirm Password:</g:cell>
      <g:customCell>
        <g:PasswordTextBox ui:field="confirmPassword"
          width="100%" />
      </g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder>
