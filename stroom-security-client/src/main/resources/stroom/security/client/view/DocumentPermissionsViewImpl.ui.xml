<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view" xmlns:l="urn:import:stroom.item.client">
    <ui:style>
        .max {
        width: 100%;
        height: 100%;
        }

        .cascade {
        margin-top: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="layout" width="100%" height="100%">
        <g:north size="25">
            <g:Button ui:field="inheritPermissionsButton" text="Copy parent's" />
        </g:north>
        <g:south size="25">
            <g:Grid ui:field="cascadeGrid" styleName="stroom-control-grid {style.cascade}">
                <g:row>
                    <g:cell>Cascade:</g:cell>
                    <g:customCell>
                        <l:ItemListBox ui:field="cascade" />
                    </g:customCell>
                </g:row>
            </g:Grid>

        </g:south>

        <g:center>
            <v:ResizeSimplePanel ui:field="tabs" styleName="{style.max}"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder> 
