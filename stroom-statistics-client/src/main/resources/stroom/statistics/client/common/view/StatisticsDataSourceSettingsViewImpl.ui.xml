<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
  xmlns:l="urn:import:stroom.item.client">
  <g:FlowPanel styleName="stroom-control-page">
    <g:Grid styleName="stroom-control-grid">
      <g:row>
        <g:cell>Description:</g:cell>
        <g:customCell>
          <g:TextArea ui:field="description" width="400px" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Statistic Type:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="statisticType" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Precision:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="precision" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Roll Up Type:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="rollUpType" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Enabled:</g:cell>
        <g:customCell>
          <tickbox:TickBox ui:field="enabled" />
        </g:customCell>
      </g:row>
    </g:Grid>
  </g:FlowPanel>
</ui:UiBinder> 
