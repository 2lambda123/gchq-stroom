<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:layout="urn:import:stroom.widget.layout.client.view">
    <ui:style>
        .layout {
        width: 100%;
        height: 100%;
        }

        .synchState {
        padding: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" styleName="{style.layout} stroom-content">
        <g:south size="200">
            <g:MaxScrollPanel>
                <g:HTML ui:field="synchState" styleName="{style.synchState}"/>
            </g:MaxScrollPanel>
        </g:south>
        <g:center>
            <layout:ResizeSimplePanel ui:field="dataGrid"
                                      styleName="dataGrid" width="100%" height="100%"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
