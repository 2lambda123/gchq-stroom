<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="solrIndexFieldUse" label="Field Use">
            <l:ItemListBox ui:field="fieldUse" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldName" label="Field Name">
            <g:TextBox ui:field="fieldName" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldType" label="Field Type">
            <l:StringListBox ui:field="fieldType" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexDefaultValue" label="Default Value">
            <g:TextBox ui:field="defaultValue" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexStored" label="Stored">
            <tickbox:CustomCheckBox ui:field="stored"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexIndexed" label="Indexed">
            <tickbox:CustomCheckBox ui:field="indexed"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexUninvertible" label="Uninvertible">
            <tickbox:CustomCheckBox ui:field="uninvertible"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexDocValues" label="Doc Values">
            <tickbox:CustomCheckBox ui:field="docValues"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexMultiValued" label="Multi Valued">
            <tickbox:CustomCheckBox ui:field="multiValued"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexRequired" label="Required">
            <tickbox:CustomCheckBox ui:field="required"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexOmitNorms" label="Omit Norms">
            <tickbox:CustomCheckBox ui:field="omitNorms"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexOmitPositions" label="Omit Positions">
            <tickbox:CustomCheckBox ui:field="omitPositions"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexOmitTermFreqAndPositions" label="Omit Term Freq And Positions">
            <tickbox:CustomCheckBox ui:field="omitTermFreqAndPositions"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexTermVectors" label="Term Vectors">
            <tickbox:CustomCheckBox ui:field="termVectors"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexTermPositions" label="Term Positions">
            <tickbox:CustomCheckBox ui:field="termPositions"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexTermOffsets" label="Term Offsets">
            <tickbox:CustomCheckBox ui:field="termOffsets"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexTermPayloads" label="Term Payloads">
            <tickbox:CustomCheckBox ui:field="termPayloads"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexSortMissingFirst" label="Sort Missing First">
            <tickbox:CustomCheckBox ui:field="sortMissingFirst"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexSortMissingLast" label="Sort Missing Last">
            <tickbox:CustomCheckBox ui:field="sortMissingLast"/>
        </form:FormGroup>

        <g:HTML ui:field="synchState" styleName="dock-min"></g:HTML>
    </g:FlowPanel>
</ui:UiBinder>