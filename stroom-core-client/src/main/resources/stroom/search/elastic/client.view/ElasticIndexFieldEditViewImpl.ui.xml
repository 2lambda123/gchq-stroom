<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:view="urn:import:stroom.widget.layout.client.view">
    <view:ResizeSimplePanel styleName="stroom-control-page" width="100%" height="100%">
        <g:DockLayoutPanel unit="PX" width="100%" height="100%">
            <g:south size="200">
                <g:HTML ui:field="synchState" width="100%" height="200px"></g:HTML>
            </g:south>
            <g:center>
                <g:Grid styleName="stroom-control-grid">
                    <g:row>
                        <g:cell>Field Use:</g:cell>
                        <g:customCell>
                            <l:ItemListBox ui:field="fieldUse" width="100%"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Field Name:</g:cell>
                        <g:customCell>
                            <g:TextBox ui:field="fieldName" width="100%"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Field Type:</g:cell>
                        <g:customCell>
                            <l:StringListBox ui:field="fieldType" width="100%"/>
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:cell>Stored:</g:cell>
                        <g:customCell>
                            <tickbox:TickBox ui:field="stored"/>
                        </g:customCell>
                    </g:row>
                </g:Grid>
            </g:center>
        </g:DockLayoutPanel>
    </view:ResizeSimplePanel>
</ui:UiBinder>