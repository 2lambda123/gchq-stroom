<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .layout {
        width: 500px;
        height: 288px;
        margin: -5px -5px 0px;
        border-bottom: solid;
        }

        .stroom-body {
        position: relative;
        width: 500px;
        height: 30px;
        }

        .stroom-background {
        position: absolute;
        width: 500px;
        height: 30px;
        }

        .body {
        padding: 5px;
        }

        .buildInfo {
        position: absolute;
        right: 5px;
        bottom: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" styleName="{style.layout} stroom-border">
        <g:north size="30">
            <g:FlowPanel styleName="stroom-body {style.stroom-body} stroom-content">
                <g:HTMLPanel>
                    <img style="position:absolute;width:185px;height:29px;" src="images/logo.svg"/>
                </g:HTMLPanel>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:FlowPanel styleName="{style.body}">
                <g:SimplePanel ui:field="html"/>
                <g:FlowPanel styleName="{style.buildInfo}">
                    <g:Label ui:field="buildVersion"/>
                    <g:Label ui:field="buildDate"/>
                    <g:Label ui:field="upDate"/>
                    <g:Label ui:field="nodeName"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
