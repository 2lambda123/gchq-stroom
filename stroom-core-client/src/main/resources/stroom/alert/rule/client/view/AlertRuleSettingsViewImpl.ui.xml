<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:item="urn:import:stroom.item.client"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:v="urn:import:stroom.widget.valuespinner.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="alertRuleSettingsDescription" label="Description">
            <g:TextArea ui:field="description" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsLanguageVersion" label="Language Version">
            <item:ItemListBox ui:field="languageVersion" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsQuery" label="Query">
            <g:SimplePanel ui:field="query" width="800px" height="600px" addStyleNames="stroom-control"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsEnabled" label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsAlertRuleType" label="Alert Rule Type">
            <l:ItemListBox ui:field="alertRuleType"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsExecutionDelay" label="Execution Delay">
            <g:TextBox ui:field="executionDelay"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsExecutionFrequency" label="Execution Frequency">
            <g:TextBox ui:field="executionFrequency"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsThresholdField" label="Threshold Field">
            <g:TextBox ui:field="thresholdField"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsThreshold" label="Threshold">
            <v:ValueSpinner ui:field="threshold" addStyleNames="allow-focus"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
