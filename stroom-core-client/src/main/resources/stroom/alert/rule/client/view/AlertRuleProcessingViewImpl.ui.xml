<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:d="urn:import:stroom.widget.customdatebox.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="alertRuleSettingsEnabled" label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsTimeToWaitForData" label="Time To Wait For Data To Arrive">
            <d:DurationPicker ui:field="timeToWaitForData"/>
        </form:FormGroup>
        <form:FormGroup identity="alertRuleSettingsProcessingWindow" label="Processing Window">
            <d:DurationPicker ui:field="processingWindow"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
