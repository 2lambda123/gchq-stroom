<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:stroom.widget.layout.client.view">
  <ui:style>
    .top {
    	width: 100%;
    	height: 100%;
    	border-bottom: solid;
    }
    
    .middle {
    	width: 100%;
    	height: 100%;
    	border-top: solid;
    	border-bottom: solid;
    }
  </ui:style>

  <g:MySplitLayoutPanel width="100%" height="100%">
    <g:north size="400">
      <v:ResizeSimplePanel ui:field="poolList" styleName="{style.top} stroom-content stroom-border" />
    </g:north>
    <g:center>
      <v:ResizeSimplePanel ui:field="poolNodeList" styleName="{style.middle} stroom-content stroom-border" />
    </g:center>
  </g:MySplitLayoutPanel>
</ui:UiBinder>
