<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="notificationEnabled" label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
        <form:FormGroup identity="notificationDestinationFeed" label="Destination Feed For Alerts">
            <g:SimplePanel ui:field="destinationFeed"/>
        </form:FormGroup>
        <form:FormGroup identity="notificationUseSourceFeedIfPossible" label="Use Source Feed If Possible">
            <tickbox:CustomCheckBox ui:field="useSourceFeedIfPossible"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
