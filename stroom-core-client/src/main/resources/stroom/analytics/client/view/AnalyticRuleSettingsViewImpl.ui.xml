<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:item="urn:import:stroom.item.client"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
>
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="analyticRuleSettingsDescription" label="Description">
            <g:TextArea ui:field="description" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticRuleSettingsLanguageVersion" label="Language Version">
            <item:ItemListBox ui:field="languageVersion" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticRuleSettingsAlertRuleType" label="Alert Rule Type">
            <l:ItemListBox ui:field="analyticRuleType"/>
        </form:FormGroup>
        <g:FlowPanel ui:field="aggregateSettings" styleName="form">
            <form:FormGroup identity="analyticRuleSettingsDestinationFeed" label="Destination Feed For Alerts">
                <g:SimplePanel ui:field="destinationFeed"/>
            </form:FormGroup>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 
