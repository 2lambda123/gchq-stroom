<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:q="urn:import:stroom.query.client.view"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:SimplePanel styleName="max control__padding-right control__padding-bottom">
        <g:MySplitLayoutPanel styleName="max">
            <g:north size="200">
                <g:SimplePanel ui:field="shardList" styleName="max dashboard-panel overflow-hidden"/>
            </g:north>
            <g:center>
                <g:FlowPanel styleName="DashboardViewImpl max dock-container-vertical">
                    <g:FlowPanel styleName="DashboardViewImpl-top dock-min dock-container-horizontal">
                        <g:FlowPanel styleName="dock-max">
                            <!--                <q:NavButtons ui:field="navButtons" addStyleNames="dock-min"/>-->
                        </g:FlowPanel>
                        <g:FlowPanel styleName="DashboardViewImpl-top-buttons dock-min dock-container-horizontal">
                            <q:TimeRangeSelector ui:field="timeRangeSelector" addStyleNames="dock-min"/>
                            <b:InlineSvgButton ui:field="warnings" title="Show Warnings"/>
                            <q:QueryButtons ui:field="queryButtons" addStyleNames="dock-min"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                    <g:SimplePanel ui:field="tableContainer" styleName="dock-max"/>
                </g:FlowPanel>
            </g:center>
        </g:MySplitLayoutPanel>
    </g:SimplePanel>
</ui:UiBinder>
