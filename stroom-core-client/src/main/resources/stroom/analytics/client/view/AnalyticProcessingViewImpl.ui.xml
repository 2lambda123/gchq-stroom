<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:c="urn:import:stroom.widget.customdatebox.client"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:d="urn:import:stroom.widget.customdatebox.client">
    <g:FlowPanel styleName="max form-padding form overflow-auto">
        <form:FormGroup identity="analyticProcessingQuery"
                        label="Query">
            <g:SimplePanel ui:field="queryEditorContainer" styleName="stroom-control__no-padding default-min-sizes overflow-hidden"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingEnabled"
                        label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingType"
                        label="Processing Type">
            <l:SelectionBox ui:field="processingType"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingNode"
                        label="Processing Node"
                        ui:field="nodeContainer">
            <l:SelectionBox ui:field="node"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingErrorFeed" label="Feed For Errors">
            <g:SimplePanel ui:field="errorFeed"/>
        </form:FormGroup>
        <form:FormGroup ui:field="analyticProcessingMinMetaCreateTimeMs"
                        identity="analyticProcessingMinMetaCreateTimeMs"
                        label="Min Stream Create Time">
            <c:MyDateBox ui:field="minMetaCreateTimeMs"/>
        </form:FormGroup>
        <form:FormGroup ui:field="analyticProcessingMaxMetaCreateTimeMs"
                        identity="analyticProcessingMaxMetaCreateTimeMs"
                        label="Max Stream Create Time">
            <c:MyDateBox ui:field="maxMetaCreateTimeMs"/>
        </form:FormGroup>
        <form:FormGroup ui:field="analyticProcessingMinEventTimeMs"
                        identity="analyticProcessingMinEventTimeMs"
                        label="Min Event Time">
            <c:MyDateBox ui:field="minEventTimeMs"/>
        </form:FormGroup>
        <form:FormGroup ui:field="analyticProcessingMaxEventTimeMs"
                        identity="analyticProcessingMaxEventTimeMs"
                        label="Max Event Time">
            <c:MyDateBox ui:field="maxEventTimeMs"/>
        </form:FormGroup>
        <form:FormGroup ui:field="queryFrequencyFormGroup"
                        identity="queryFrequencyFormGroup"
                        label="Query Frequency">
            <d:DurationPicker ui:field="queryFrequency"/>
        </form:FormGroup>
        <form:FormGroup ui:field="timeToWaitForDataFormGroup"
                        identity="analyticRuleSettingsTimeToWaitForData"
                        label="Time To Wait For Data To Be Indexed">
            <d:DurationPicker ui:field="timeToWaitForData"/>
        </form:FormGroup>
        <form:FormGroup ui:field="dataRetentionFormGroup"
                        identity="analyticRuleSettingsDataRetention"
                        label="Time To Keep Data In The Table">
            <d:DurationPicker ui:field="dataRetention"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingInfo"
                        label="Processing Info">
            <g:FlowPanel styleName="form">
                <g:SimplePanel ui:field="info" styleName="default-min-sizes stroom-control__no-padding overflow-auto"/>
                <b:Button ui:field="refresh" text="Refresh"/>
            </g:FlowPanel>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
