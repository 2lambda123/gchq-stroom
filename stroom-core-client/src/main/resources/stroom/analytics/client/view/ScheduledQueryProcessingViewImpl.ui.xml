<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:c="urn:import:stroom.widget.customdatebox.client"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:d="urn:import:stroom.widget.customdatebox.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingNode" label="Processing Node">
            <l:SelectionBox ui:field="node"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingErrorFeed" label="Feed For Errors">
            <g:SimplePanel ui:field="errorFeed"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingMinEventTimeMs" label="Min Event Time">
            <c:MyDateBox ui:field="minEventTimeMs"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingMaxEventTimeMs" label="Max Event Time">
            <c:MyDateBox ui:field="maxEventTimeMs"/>
        </form:FormGroup>
        <form:FormGroup identity="queryFrequencyFormGroup" label="Query Frequency">
            <d:DurationPicker ui:field="queryFrequency"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticRuleSettingsTimeToWaitForData" label="Time To Wait For Data To Be Indexed">
            <d:DurationPicker ui:field="timeToWaitForData"/>
        </form:FormGroup>
        <form:FormGroup identity="analyticProcessingInfo" label="Processing Info">
            <g:FlowPanel styleName="form">
                <g:SimplePanel ui:field="info" styleName="default-min-sizes stroom-control__no-padding overflow-auto"/>
                <b:Button ui:field="refresh" text="Refresh"/>
            </g:FlowPanel>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
