<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:stroom.widget.button.client"
             xmlns:v="urn:import:stroom.widget.dropdowntree.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="exportConfigSelect" label="Select the items to export" addStyleNames="max">
            <g:FlowPanel styleName="max default-min-sizes dock-container-vertical">
                <g:FlowPanel styleName="dock-min dock-container-horizontal exportConfigViewImpl-filter">
                    <v:QuickFilter ui:field="nameFilter" addStyleNames="dock-max quickFilter__margin-bottom"/>
                    <g:FlowPanel addStyleNames="dock-min button-container">
                        <p:SvgButton ui:field="typeFilter"/>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:SimplePanel ui:field="tree" styleName="dock-max stroom-control"/>
            </g:FlowPanel>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>
