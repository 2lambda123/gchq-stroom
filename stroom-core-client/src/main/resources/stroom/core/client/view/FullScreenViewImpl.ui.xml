<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <!-- Add a focus panel as the root so we can catch all keyboard events. -->
    <g:FocusPanel styleName="fullScreenViewImpl-root">
        <g:FlowPanel styleName="fullScreenViewImpl-root">
            <g:ResizeLayoutPanel ui:field="contentPanel"
                                 styleName="fullScreenViewImpl-contentPanel">
            </g:ResizeLayoutPanel>
        </g:FlowPanel>
    </g:FocusPanel>
</ui:UiBinder>
