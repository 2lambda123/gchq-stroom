<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view">
    <g:FlowPanel styleName="max dock-container-vertical">
        <g:SimplePanel styleName="dock-min stroom-content stroom-border-bottom">
            <g:FlowPanel styleName="linkTabPanelViewImpl">
                <g:FlowPanel ui:field="left" styleName="linkTabPanelViewImpl-left"/>
                <g:ResizeLayoutPanel styleName="linkTabPanelViewImpl-middle">
                    <tab:LinkTabBar ui:field="tabBar"/>
                </g:ResizeLayoutPanel>
                <g:FlowPanel ui:field="right" styleName="linkTabPanelViewImpl-right"/>
            </g:FlowPanel>
        </g:SimplePanel>
        <g:SimplePanel styleName="dock-max">
            <tab:LayerContainerImpl ui:field="layerContainer" width="100%"
                                    height="100%"/>
        </g:SimplePanel>
    </g:FlowPanel>
</ui:UiBinder>
