<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:stroom.item.client">
    <g:FlowPanel styleName="max dock-container-vertical overflow-hidden">
        <g:Label text="Select the parent group:" addStyleNames="dock-min moveDocumentViewImpl-label"/>
        <g:SimplePanel ui:field="foldersOuter" styleName="dock-max moveDocumentViewImpl-foldersOuter overflow-hidden">
            <g:SimplePanel ui:field="foldersInner" styleName="max overflow-hidden itemCheckList"/>
        </g:SimplePanel>
        <g:Grid styleName="dock-min stroom-control-grid">
            <g:row>
                <g:cell>Permissions:</g:cell>
                <g:customCell>
                    <l:ItemListBox ui:field="permissionInheritance" addStyleNames="w-100"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:FlowPanel>
</ui:UiBinder>
