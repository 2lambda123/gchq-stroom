<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:v="urn:import:stroom.widget.layout.client.view"
			 xmlns:pager="urn:import:stroom.data.pager.client"
			 xmlns:tab="urn:import:stroom.widget.tab.client.view"
			 xmlns:btn="urn:import:stroom.widget.button.client">

	<ui:style>
		.layout {
		width: 100%;
		height: 100%;
		background-color: white;
		}

		.tabBarOuter {
		position: absolute;
		left: 0px;
		top: 1px;
		width: 100%;
		height: 24px;
		padding-left: 10px;
		padding-right: 3px;
		padding-top: 1px;
		}

		.tabBarInner {
		position: relative;
		width: 100%;
		height: 100%;
		}

		.buttonPanel {
		float: right;
		padding-right: 2em;
		}

<!--		.segmentPager {-->
<!--		float:-->
<!--		right;-->
<!--		}-->

<!--		.dataPager {-->
<!--		min-width: 250px;-->
<!--		float: right;-->
<!--		text-align: right;-->
<!--		}-->

		.dataNavigator {
		min-width: 250px;
		float: right;
		text-align: right;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="{style.layout}">
		<g:center>
			<tab:LayerContainerImpl ui:field="layerContainer"
				width="100%" height="100%" />
		</g:center>
		<g:north size="20">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
<!--				<g:east size="500">-->
<!--					<v:ResizeFlowPanel width="100%" height="100%">-->

<!--						<pager:Pager ui:field="dataPager" styleName="{style.dataPager}" />-->
<!--						<pager:Pager ui:field="segmentPager" styleName="{style.segmentPager}"-->
<!--							visible="false" />-->
<!--					</v:ResizeFlowPanel>-->
<!--				</g:east>-->
				<g:east size="650">
					<v:ResizeFlowPanel width="100%" height="100%">
						<pager:DataNavigator ui:field="dataNavigator" styleName="{style.dataNavigator}" visible="false"/>
						<btn:ButtonPanel ui:field="buttonPanel" styleName="{style.buttonPanel}"/>
					</v:ResizeFlowPanel>
				</g:east>
				<g:center>
					<v:ResizeFlowPanel styleName="{style.tabBarOuter}">
						<tab:LinkTabBar ui:field="tabBar" addStyleNames="{style.tabBarInner}" />
					</v:ResizeFlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
