<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:v="urn:import:stroom.widget.layout.client.view"
			 xmlns:b="urn:import:stroom.widget.button.client"
			 xmlns:pager="urn:import:stroom.data.pager.client"
			 xmlns:tab="urn:import:stroom.widget.tab.client.view"
			 xmlns:btn="urn:import:stroom.widget.button.client">

	<ui:style>
		.layout {
		width: 100%;
		height: 100%;
		background-color: white;
		}

		.tabBarOuter {
		position: absolute;
		left: 0px;
		top: 1px;
		width: 300px;
		height: 24px;
		padding-left: 10px;
		padding-right: 3px;
		padding-top: 1px;
		}

		.tabBarInner {
		position: relative;
		width: 100%;
		height: 100%;
		}

		.rightPanel {
		width: max-content;
		float: right;
		padding-right: 0.25em;
		padding-top: 1px;
		}

		.navigatorContainer {
		float: left;
		}

		.progressBarPanel {
		width: 100%;
		height: 6px;
		padding-right: 0.25em;
		padding-left: 0.25em;
		}

		.sourceLinkLabel {
		margin: 0px;
		margin-top: 2px;
		padding-left: 0.75em;
		padding-right: 0.75em;
		float: left;
		}

		.buttonPanel {
		float: left;
		}

	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="{style.layout}">
		<g:center>
			<tab:LayerContainerImpl ui:field="layerContainer"
				width="100%" height="100%" />
		</g:center>
		<g:north size="20">
			<g:FlowPanel width="100%" height="100%">
				<v:ResizeFlowPanel styleName="{style.tabBarOuter}">
					<tab:LinkTabBar ui:field="tabBar"
									addStyleNames="{style.tabBarInner}" />
				</v:ResizeFlowPanel>
				<g:FlowPanel styleName="{style.rightPanel}">
					<b:ButtonPanel ui:field="buttonPanel" styleName="{style.buttonPanel}"/>
					<v:ResizeSimplePanel ui:field="navigatorContainer"
										 styleName="{style.navigatorContainer}"/>
					<g:Label ui:field="sourceLinkLabel"
							 styleName="{style.sourceLinkLabel} clickableLabel"/>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:north>
		<g:north size="8">
			<g:SimplePanel ui:field="progressBarPanel"
						   styleName="{style.progressBarPanel}"/>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
