<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:stroom.widget.layout.client.view">

  <ui:style>
    .top {
    	width: 100%;
    	height: 100%;
    	border-bottom: solid;
    }
    
    .middle {
    	width: 100%;
    	height: 100%;
    	border-top: solid;
    	border-bottom: solid;
    }
    
    .bottom {
    	width: 100%;
    	height: 100%;
    	border-top: solid;
    }
    .statusIcon {
        padding-top: 10px;
    }
  </ui:style>

  <g:MySplitLayoutPanel width="100%" height="100%">
    <g:north size="200">
      <v:ResizeSimplePanel ui:field="streamList"
        styleName="{style.top} stroom-content stroom-border" />
    </g:north>
    <g:center>
      <g:MySplitLayoutPanel width="100%" height="100%">
          <g:north size="150">
          <v:ResizeSimplePanel ui:field="streamRelationList"
            styleName="{style.middle} stroom-content stroom-border">
          </v:ResizeSimplePanel>
        </g:north>
        <g:center>
          <v:ResizeSimplePanel ui:field="data"
            styleName="{style.bottom} stroom-content stroom-border" />
        </g:center>
      </g:MySplitLayoutPanel>
    </g:center>
  </g:MySplitLayoutPanel>
</ui:UiBinder>
