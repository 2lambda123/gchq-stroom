<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.valuespinner.client"
             xmlns:lci="urn:import:stroom.widget.linecolinput.client">
    <ui:style>
        .panelChild {
        }
        .countLabel {
        padding-left: 6px;
        }
        .flowPanel {
        display: flex;
        }
    </ui:style>
    <g:FlowPanel width="100%"
                 height="100%"
                 styleName="{style.flowPanel}">
        <g:Label
                ui:field="nameLbl"
                addStyleNames="{style.panelChild}"/>
        <v:ValueSpinner
                ui:field="itemNoSpinner"
                addStyleNames="{style.panelChild}"/>
        <g:Label
                ui:field="itemCountLbl"
                addStyleNames="{style.panelChild} {style.countLabel}"/>
    </g:FlowPanel>
</ui:UiBinder>
