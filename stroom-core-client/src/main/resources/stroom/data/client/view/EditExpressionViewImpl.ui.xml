<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:r="urn:import:stroom.widget.layout.client.view"
             xmlns:b="urn:import:stroom.widget.button.client">
    <r:ResizeFlowPanel width="100%" height="100%">
        <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="stroom-content stroom-border">
            <g:north size="20">
                <b:ButtonPanel ui:field="buttonPanel"/>
            </g:north>
            <g:center>
                <g:MaxScrollPanel>
                    <r:ResizeSimplePanel ui:field="expressionTree"
                                         styleName="max editExpressionViewImpl-expressionTree"/>
                </g:MaxScrollPanel>
            </g:center>
        </g:DockLayoutPanel>
    </r:ResizeFlowPanel>
</ui:UiBinder>