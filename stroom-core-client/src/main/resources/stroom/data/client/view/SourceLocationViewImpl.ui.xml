<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.valuespinner.client">
    <ui:style>
        .max {
        width:100%;
        height:100%;
        }
        .textArea {
        width:100%;
        height:80px;
        }
        .textAreaReducedHeight {
        width:100%;
        height:50px;
        }
        .lineColPanelChild {
        float: left;
        width: 70px;
        }
        .lineColSpacer {
        width: 20px;
        text-align: center;
        }
        .lineColSpinner {
        width: 65px;
        }
        .charSpinner {
        width: 120px;
        }
        td.headingRow {
        font-weight: bold;
        }
        td.paddedRow {
        padding-top: 15px !important;
        }
        .panelChild {
        float: left;
        }
        .countLabel {
        padding-left: 6px;
        }
    </ui:style>

    <g:Grid ui:field="grid" styleName="stroom-control-grid {style.max}">

        <!-- SOURCE  -->
        <g:row>
            <g:cell styleName="{style.headingRow}">Source:</g:cell>
            <g:cell />
        </g:row>
        <g:row>
            <g:cell>ID:</g:cell>
            <g:customCell>
                <v:ValueSpinner ui:field="idField"/>
            </g:customCell>
        </g:row>
        <!-- multi-part and multi-segment are mutually exclusive so just put them
             on the same row as only one will be visible -->
        <g:row>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <!-- parts -->
                    <g:Label ui:field="partTitleLbl" />
                    <!-- segments -->
                    <g:Label ui:field="segmentTitleLbl" />
                </g:FlowPanel>
            </g:customCell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <!-- parts -->
                    <v:ValueSpinner
                            ui:field="partNoField"
                            addStyleNames="{style.panelChild}"/>
                    <g:Label
                            ui:field="partCountLbl"
                            addStyleNames="{style.panelChild} {style.countLabel}"/>
                    <!-- segments -->
                    <v:ValueSpinner
                            ui:field="segmentNoField"
                            addStyleNames="{style.panelChild}"/>
                    <g:Label
                            ui:field="segmentCountLbl"
                            addStyleNames="{style.panelChild} {style.countLabel}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>

        <!-- FROM  -->
        <g:row>
            <g:cell styleName="{style.headingRow} {style.paddedRow}">From:</g:cell>
            <g:cell />
        </g:row>
        <g:row>
            <g:cell> Line : Column(inc.):</g:cell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <g:CheckBox
                            ui:field="lineColFromCheckBox"
                            addStyleNames="{style.panelChild}"/>
                    <v:ValueSpinner
                            ui:field="lineNoFromSpinner"
                            addStyleNames="{style.lineColPanelChild}"/>
                    <g:HTML addStyleNames="{style.lineColSpacer} {style.lineColPanelChild}">:</g:HTML>
                    <v:ValueSpinner
                            ui:field="colNoFromSpinner"
                            addStyleNames="{style.lineColPanelChild}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Character Position (inc.): </g:cell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <g:CheckBox
                            ui:field="charOffsetFromCheckBox"
                            addStyleNames="{style.panelChild}"/>
                    <v:ValueSpinner
                            ui:field="charOffsetFromSpinner"
                            addStyleNames="{style.charSpinner} {style.panelChild}"/>
                    <g:Label
                            ui:field="charCountFromLbl"
                            addStyleNames="{style.panelChild} {style.countLabel}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>

        <!-- TO  -->
        <g:row>
            <g:cell styleName="{style.headingRow} {style.paddedRow}">To:</g:cell>
            <g:cell />
        </g:row>
        <g:row>
            <g:cell> Line : Column (inc.):</g:cell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <g:CheckBox
                            ui:field="lineColToCheckBox"
                            addStyleNames="{style.panelChild}"/>
                    <v:ValueSpinner
                            ui:field="lineNoToSpinner"
                            addStyleNames="{style.lineColPanelChild}"/>
                    <g:HTML addStyleNames="{style.lineColSpacer} {style.lineColPanelChild}">:</g:HTML>
                    <v:ValueSpinner
                            ui:field="colNoToSpinner"
                            addStyleNames="{style.lineColPanelChild}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Character Position(inc.):</g:cell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <g:CheckBox
                            ui:field="charOffsetToCheckBox"
                            addStyleNames="{style.panelChild}"/>
                    <v:ValueSpinner
                            ui:field="charOffsetToSpinner"
                            addStyleNames="{style.charSpinner} {style.panelChild}"/>
                    <g:Label
                            ui:field="charCountToLbl"
                            addStyleNames="{style.panelChild} {style.countLabel}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>

        <!-- Size  -->
        <g:row>
            <g:cell styleName="{style.headingRow} {style.paddedRow}">Size:</g:cell>
            <g:cell />
        </g:row>
        <g:row>
            <g:cell>Character Count:</g:cell>
            <g:customCell>
                <g:FlowPanel width="100%" height="100%">
                    <g:CheckBox
                            ui:field="charCountCheckBox"
                            addStyleNames="{style.panelChild}"/>
                    <v:ValueSpinner
                            ui:field="charCountSpinner"
                            addStyleNames="{style.charSpinner} {style.panelChild}"/>
                </g:FlowPanel>
            </g:customCell>
        </g:row>

    </g:Grid>
</ui:UiBinder>
