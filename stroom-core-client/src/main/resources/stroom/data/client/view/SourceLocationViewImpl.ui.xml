<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.valuespinner.client"
             xmlns:lci="urn:import:stroom.widget.linecolinput.client">
    <ui:style>
        .max {
        width:100%;
        height:100%;
        }
        .lineColInput {
        width: 120px;
        }
        .offsetSpinner {
        width: 120px;
        }
        .charSpinner {
        width: 120px;
        }
        tr.headingRow>td {
        font-weight: bold !important;
        }
        tr.paddedRow {
            height: 30px;
        }
        .paddedCol {
        padding-left: 10px;
        }
        .panelChild {
        }
        .countLabel {
        padding-left: 6px;
        }
        .flowPanel {
        display: flex;
        }
        .flowPanel .lineColInput{
        width: 120px !important;
        }
    </ui:style>
    <g:FlowPanel>

        <g:Grid ui:field="sourceGrid" styleName="stroom-control-grid {style.max}">
            <!-- SOURCE  -->
            <g:row>
                <g:cell styleName="{style.headingRow}">Source:</g:cell>
                <g:cell/>
            </g:row>
            <g:row styleName="{style.paddedRow}">
                <g:cell>ID:</g:cell>
                <g:customCell>
                    <v:ValueSpinner ui:field="idField"/>
                </g:customCell>
            </g:row>
            <!-- multi-part and multi-segment are mutually exclusive so just put them
                 on the same row as only one will be visible -->
            <g:row styleName="{style.paddedRow}">
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%">
                        <!-- parts -->
                        <g:Label ui:field="partTitleLbl"/>
                        <!-- segments -->
                        <g:Label ui:field="segmentTitleLbl"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" styleName="{style.flowPanel}">
                        <!-- parts -->
                        <v:ValueSpinner
                                ui:field="partNoField"
                                addStyleNames="{style.panelChild}"/>
                        <g:Label
                                ui:field="partCountLbl"
                                addStyleNames="{style.panelChild} {style.countLabel}"/>
                        <!-- segments -->
                        <v:ValueSpinner
                                ui:field="segmentNoField"
                                addStyleNames="{style.panelChild}"/>
                        <g:Label
                                ui:field="segmentCountLbl"
                                addStyleNames="{style.panelChild} {style.countLabel}"/>
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <g:row styleName="{style.paddedRow}">
                <g:cell>Total characters: </g:cell>
                <g:customCell>
                    <g:Label ui:field="lblTotalCharCount"
                             addStyleNames="{style.panelChild}" />
                </g:customCell>
            </g:row>
        </g:Grid>


        <!-- Char location ranges -->
        <g:Grid ui:field="grid" styleName="stroom-control-grid {style.max}">
            <g:row styleName="{style.headingRow}">
                <g:cell>&nbsp;</g:cell>
                <g:cell>From</g:cell>
                <g:cell>&nbsp;</g:cell>
                <g:cell styleName="{style.paddedCol}">To</g:cell>
                <g:cell>&nbsp;</g:cell>
            </g:row>

            <!-- Line:Col => Line:col -->
            <g:row styleName="{style.paddedRow}">
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:RadioButton
                                ui:field="radioLocationToLocation"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblLineColFrom1"
                                 addStyleNames="{style.panelChild}">Line:Col From (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <lci:LineColInput
                                ui:field="lineColFrom1"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell styleName="{style.paddedCol}">
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblLineColTo"
                                 addStyleNames="{style.panelChild}">Line:Col To (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <lci:LineColInput
                                ui:field="lineColTo"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <!-- Line:Col => count -->
            <g:row styleName="{style.paddedRow}">
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:RadioButton
                                ui:field="radioLocationWithCount"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblLineColFrom2"
                                 addStyleNames="{style.panelChild}">Line:Col From (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <lci:LineColInput
                                ui:field="lineColFrom2"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell styleName="{style.paddedCol}">
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblCharCountSpinner1"
                                 addStyleNames="{style.panelChild}">Character Count</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <v:ValueSpinner
                                ui:field="charCountSpinner1"
                                addStyleNames="{style.panelChild} {style.charSpinner}"/>
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <!-- Offset => offset -->
            <g:row styleName="{style.paddedRow}">
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:RadioButton
                                ui:field="radioOffsetToOffset"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblCharOffsetFromSpinner1"
                                 addStyleNames="{style.panelChild}">Offset From (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <v:ValueSpinner
                                ui:field="charOffsetFromSpinner1"
                                addStyleNames="{style.panelChild} {style.offsetSpinner}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell styleName="{style.paddedCol}">
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblCharOffsetToSpinner1"
                                 addStyleNames="{style.panelChild}">Offset To (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <v:ValueSpinner
                                ui:field="charOffsetToSpinner1"
                                addStyleNames="{style.panelChild} {style.offsetSpinner}"/>
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <!-- Offset => count -->
            <g:row styleName="{style.paddedRow}">
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:RadioButton
                                ui:field="radioOffsetWithCount"
                                addStyleNames="{style.panelChild}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblCharOffsetFromSpinner2"
                                 addStyleNames="{style.panelChild}">Offset From (inc.)</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <v:ValueSpinner
                                ui:field="charOffsetFromSpinner2"
                                addStyleNames="{style.panelChild} {style.offsetSpinner}"/>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell styleName="{style.paddedCol}">
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <g:Label ui:field="lblCharCountSpinner2"
                                 addStyleNames="{style.panelChild}">Character Count</g:Label>
                    </g:FlowPanel>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel width="100%" height="100%" addStyleNames="{style.flowPanel}">
                        <v:ValueSpinner
                                ui:field="charCountSpinner2"
                                addStyleNames="{style.panelChild} {style.charSpinner}"/>
                    </g:FlowPanel>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:FlowPanel>
</ui:UiBinder>
