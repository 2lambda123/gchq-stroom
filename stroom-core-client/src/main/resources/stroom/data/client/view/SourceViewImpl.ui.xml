<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:v="urn:import:stroom.widget.layout.client.view"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view"
             xmlns:pager="urn:import:stroom.data.pager.client"
             xmlns:btn="urn:import:stroom.widget.button.client">

    <ui:style>
        .layout {
        width: 100%;
        height: 100%;
        background-color: white;
        }

        .buttonPanel {
        float: right;
        padding-right: 2em;
        }

        <!--		.segmentPager {-->
        <!--		float:-->
        <!--		right;-->
        <!--		}-->

        <!--		.dataPager {-->
        <!--		min-width: 250px;-->
        <!--		float: right;-->
        <!--		text-align: right;-->
        <!--		}-->

        .dataNavigator {
        min-width: 250px;
        float: right;
        text-align: right;
        }
        .titleText {
        display: inline-block;
        padding-top: 3px;
        padding-left: 0.5em;
        padding-right: 0.5em;
        }
        .titleHeading {
        display: inline-block;
        padding-top: 3px;
        padding-left: 0.5em;
        font-weight: 500;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" styleName="{style.layout}">
        <g:center>
            <v:ResizeSimplePanel ui:field="container"
                                 width="100%"
                                 height="100%" />
        </g:center>
        <g:north size="20">
            <g:DockLayoutPanel unit="PX" styleName="{style.layout}">
                <g:center>
                    <v:ResizeFlowPanel width="100%" height="100%">
                        <g:Label styleName="{style.titleHeading}">ID:</g:Label>
                        <g:Label ui:field="lblId" styleName="{style.titleText}"/>

                        <g:Label styleName="{style.titleHeading}">Stream Type:</g:Label>
                        <g:Label ui:field="lblType" styleName="{style.titleText}"/>
                    </v:ResizeFlowPanel>
                </g:center>
                <g:east size="200">
                    <v:ResizeFlowPanel width="100%" height="100%">
                        <pager:DataNavigator ui:field="dataNavigator"
                                             styleName="{style.dataNavigator}"
                                             visible="false"/>
                        <btn:ButtonPanel ui:field="buttonPanel"
                                         styleName="{style.buttonPanel}"/>
                    </v:ResizeFlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
