<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.dropdowntree.client.view"
>
    <g:FlowPanel styleName="max dock-container-vertical navigation">
        <g:FlowPanel styleName="dock-min navigation-title-bar">
            <g:Button ui:field="logo" styleName="navigation-logo focus-without-border"/>
            <g:Button ui:field="menu" title="Menu" styleName="navigation-menu-button focus-without-border"/>
        </g:FlowPanel>
        <v:QuickFilter ui:field="nameFilter" addStyleNames="dock-min explorerTreeViewImpl-nameFilter"/>
        <g:ScrollPanel ui:field="scrollPanel" styleName="dock-max"/>
        <g:SimplePanel ui:field="activityPanel" styleName="dock-min"/>
    </g:FlowPanel>
</ui:UiBinder> 
