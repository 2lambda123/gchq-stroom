<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:v="urn:import:stroom.widget.dropdowntree.client.view">

	<ui:style>
		.nameFilter {
			width: 100%;
			border: none !important;
			border-bottom: 1px solid #C5CDE2 !important;
		}
		
		.scrollPanel {
			background: white;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:north size="19">
			<v:QuickFilter ui:field="nameFilter" addStyleNames="{style.nameFilter}" />
		</g:north>
		<g:center>
			<g:MaxScrollPanel styleName="{style.scrollPanel}" ui:field="scrollPanel" />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 
