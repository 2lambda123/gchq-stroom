<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:stroom.widget.button.client"
             xmlns:v="urn:import:stroom.widget.dropdowntree.client.view">
    <g:FlowPanel styleName="max dock-container-vertical">
        <g:FlowPanel styleName="dock-min dock-container-horizontal stroom-content stroom-border-bottom">
            <g:FlowPanel styleName="dock-min buttonPanel-layout">
                <p:SvgButton ui:field="newItem"/>
                <p:SvgButton ui:field="deleteItem"/>
            </g:FlowPanel>
            <v:QuickFilter ui:field="nameFilter" addStyleNames="dock-max explorerTreeViewImpl-nameFilter"/>
            <g:FlowPanel addStyleNames="dock-min buttonPanel-layout">
                <p:SvgButton ui:field="typeFilter"/>
            </g:FlowPanel>
        </g:FlowPanel>
        <g:SimplePanel styleName="dock-max stroom-content overflow-hidden" ui:field="treeContainer"/>
    </g:FlowPanel>
</ui:UiBinder> 
