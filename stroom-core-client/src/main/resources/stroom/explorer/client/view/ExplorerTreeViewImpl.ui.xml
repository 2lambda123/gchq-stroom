<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:stroom.widget.button.client"
             xmlns:v="urn:import:stroom.widget.dropdowntree.client.view">
    <ui:style>
        .bar div {
        display: inline-block;
        white-space: nowrap;
        }

        .nameFilter {
        width: 100%;
        border: none !important;
        }

        .buttonContainer {
        margin-left: 2px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="19">
            <g:DockLayoutPanel unit="PX" styleName="stroom-content stroom-border-bottom">
                <g:west size="38">
                    <g:FlowPanel styleName="{style.buttonContainer}">
                        <p:SvgButton ui:field="newItem"/>
                        <p:SvgButton ui:field="deleteItem"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <v:QuickFilter ui:field="nameFilter" addStyleNames="{style.nameFilter}"/>
                </g:center>
                <g:east size="18">
                    <g:FlowPanel>
                        <p:SvgButton ui:field="typeFilter"/>
                    </g:FlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:SimplePanel styleName="stroom-content" ui:field="treeContainer"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 
