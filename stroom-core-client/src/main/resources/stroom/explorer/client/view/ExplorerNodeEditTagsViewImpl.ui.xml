<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="editNodeTags max form">

        <form:FormGroup identity="editNodeTagsNodeTags"
                        label="Tags"
                        addStyleNames="editNodeTagsNodeTagsFrmGrp flex-grow-1">
            <g:FlowPanel styleName="max form">
                <g:ListBox ui:field="nodeTagsListBox"
                           addStyleNames="form-control dock-max w-100"/>
                <b:ButtonPanel ui:field="nodeTagsButtonPanel"
                               addStyleNames="dock-min"/>
            </g:FlowPanel>
        </form:FormGroup>

        <form:FormGroup identity="editNodeTagsAddTags"
                        label="Add Tag(s)"
                        addStyleNames="editNodeTagsAddTagsFrmGrp dock-min">
            <g:FlowPanel styleName="max form flex-grow-0">
                <g:HTML styleName="editNodeTagsAddTagsLabel example-label">
                    E.g. One tag '<code>extraction-pipeline</code>' or multiple tags '<code>system-x system-y</code>'.
                </g:HTML>
                <g:FlowPanel styleName="editNodeTagsAddTagsInputPanel flex-row dock-min form">
                    <g:TextBox ui:field="textBox"
                               addStyleNames="form-control lower-case-input w-100"/>
                    <b:ButtonPanel ui:field="inputButtonPanel"
                                   addStyleNames="align-center dock-max"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </form:FormGroup>

        <form:FormGroup identity="editNodeTagsAllTags"
                        label="All known tags"
                        addStyleNames="editNodeTagsAllTagsFrmGrp dock-max">
            <g:FlowPanel styleName="max form flex-grow-1">
                <g:ListBox ui:field="allTagsListBox"
                           addStyleNames="form-control dock-max w-100"/>
<!--                <b:ButtonPanel ui:field="allTagsButtonPanel"-->
<!--                               addStyleNames="dock-min"/>-->
            </g:FlowPanel>
        </form:FormGroup>

    </g:FlowPanel>
</ui:UiBinder>
