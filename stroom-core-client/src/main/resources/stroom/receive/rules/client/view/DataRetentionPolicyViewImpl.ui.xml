<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <ui:style>
        .top {
        width: 100%;
        height: 100%;
        border-bottom: 1px solid #c5cde2;
        background: white;
        }

        .bottom {
        width: 100%;
        height: 100%;
        border-top: 1px solid #c5cde2;
        background: white;
        }

        .tabBarOuter {
        position: absolute;
        left: 0px;
        top: 1px;
        width: 100%;
        height: 24px;
        padding-left: 10px;
        padding-right: 3px;
        padding-top: 1px;
        }

        .tabBarInner {
        position: relative;
        width: 100%;
        height: 100%;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="20">
            <v:ResizeFlowPanel styleName="{style.tabBarOuter}">
                <tab:LinkTabBar ui:field="tabBar" addStyleNames="{style.tabBarInner}" />
            </v:ResizeFlowPanel>
        </g:north>
        <g:center>
            <g:MySplitLayoutPanel unit="PX" width="100%" height="100%" vSplits="0.5">
                <g:north size="200">
                    <g:SimplePanel ui:field="table" styleName="{style.top}"/>
                </g:north>
                <g:center>
                    <g:SimplePanel ui:field="expression" styleName="{style.bottom}"/>
                </g:center>
            </g:MySplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 
