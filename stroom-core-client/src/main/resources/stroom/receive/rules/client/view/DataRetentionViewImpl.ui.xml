<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="22">
            <v:ResizeFlowPanel styleName="dataRetentionViewImpl-tabBarOuter">
                <tab:LinkTabBar ui:field="tabBar" addStyleNames="max dataRetentionViewImpl-tabBarInner"/>
            </v:ResizeFlowPanel>
        </g:north>
        <g:center>
            <tab:LayerContainerImpl ui:field="layerContainer" width="100%" height="100%"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
