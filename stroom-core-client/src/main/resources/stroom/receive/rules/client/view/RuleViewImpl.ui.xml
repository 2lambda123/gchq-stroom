<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:i="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
>
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="ruleExpression" label="Expression" addStyleNames="dock-max">
            <g:SimplePanel ui:field="expression" styleName="max default-min-sizes stroom-control"/>
        </form:FormGroup>
        <form:FormGroup identity="ruleRuleName" label="Rule Name (optional)">
            <g:TextBox ui:field="name" addStyleNames="ruleViewImpl-name"/>
        </form:FormGroup>
        <form:FormGroup identity="ruleAction" label="Action">
            <i:ItemListBox ui:field="action"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>