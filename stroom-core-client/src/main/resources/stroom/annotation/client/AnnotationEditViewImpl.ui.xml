<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view"
             xmlns:button="urn:import:stroom.widget.button.client">

    <g:FlowPanel styleName="annotationContainer">
        <g:FlowPanel styleName="annotationTop">
            <g:FlowPanel addStyleNames="annotationTitleContainer">
                <g:Label ui:field="titleLabel" styleName="annotationTitleLabel"/>
                <g:TextBox ui:field="titleTextBox" styleName="annotationTitleTextBox"/>
            </g:FlowPanel>
            <g:FlowPanel addStyleNames="annotationSubjectContainer">
                <g:Label ui:field="subjectLabel" styleName="annotationSubjectLabel"/>
                <g:TextBox ui:field="subjectTextBox" styleName="annotationSubjectTextBox"/>
            </g:FlowPanel>
        </g:FlowPanel>
        <g:SimplePanel styleName="annotationSettingDivider"/>
        <g:FlowPanel styleName="annotationBottom">
            <g:FlowPanel styleName="annotationLeft">
                <v:ResizeSimplePanel ui:field="history" styleName="annotationHistory"/>
                <g:FlowPanel styleName="annotationCommentContainer">
                    <g:TextArea ui:field="comment" styleName="annotationComment"/>
                    <g:SimplePanel ui:field="buttons" styleName="annotationButtons">
                        <g:Button ui:field="create" text="Create" width="200px"/>
                    </g:SimplePanel>
                </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel styleName="annotationRight">
                <g:FlowPanel addStyleNames="annotationSettingHeading" ui:field="statusSelection">
                    <g:Label ui:field="statusLabel" styleName="annotationClickLabel" text="Status"/>
                    <button:SvgButton ui:field="statusIcon"/>
                </g:FlowPanel>
                <g:SimplePanel addStyleNames="annotationSettingBody" ui:field="currentStatusContainer"/>
                <g:SimplePanel styleName="annotationSettingDivider"/>
                <g:FlowPanel addStyleNames="annotationSettingHeading" ui:field="assignedToSelection">
                    <g:Label ui:field="assignedToLabel" styleName="annotationClickLabel"
                             text="Assigned To"/>
                    <button:SvgButton ui:field="assignedToIcon"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="annotationSettingBody">
                    <g:FlowPanel ui:field="assignYourselfContainer">
                        <g:Label styleName="annotationNobody">Nobody</g:Label>
                        <g:Label ui:field="assignYourself" styleName="annotationAssignYourself">Assign Yourself
                        </g:Label>
                    </g:FlowPanel>
                    <g:FlowPanel ui:field="currentAssignedToContainer">
                        <g:Label ui:field="assignedTo"/>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

