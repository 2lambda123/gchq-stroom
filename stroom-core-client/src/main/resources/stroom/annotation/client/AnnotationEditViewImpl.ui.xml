<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view"
             xmlns:button="urn:import:stroom.widget.button.client">

    <ui:style>
        .container {
        display: flex;
        flex-flow: row;
        width: 100%;
        height: 100%;
        background-color: white;
        border: 1px solid #C5CDE2;
        padding: 10px;
        }

        .left {
        flex-grow: 1;
        }

        .right {
        flex-shrink: 0;
        width: 250px;
        padding-left: 10px;
        }

        .clickHeading {
        display: flex;
        width: 100%;
        opacity: 0.6;
        cursor: pointer;
        transition: opacity 0.5s linear;
        -webkit-transition: opacity 0.5s linear;
        -moz-transition: opacity 0.5s linear;
        -o-transition: opacity 0.5s linear;
        }

        .clickHeading:hover {
        opacity: 0.9;
        }

        .clickLabel {
        font-weight: bold;
        }

        .commentContainer {
        display: flex;
        flex-flow: column;
        flex-grow: 1;
        <!--        border: 1px solid #C5CDE2;-->
        <!--        border-radius: 5px;-->
        <!--        padding: 10px;-->
        <!--        padding-bottom: 30px;-->
        width: 100%;
        height: 100%;
        }

        .editor {
        flex-grow: 1;
        border: 1px solid #C5CDE2;
        border-radius: 5px;
        padding: 5px;
        <!--        padding: 10px;-->
        <!--        &lt;!&ndash;        padding-bottom: 30px;&ndash;&gt;-->
        <!--        width: 100%;-->
        <!--        height: 100%;-->
        }

        .buttons {
        flex-shrink: 0;
        <!--        position: absolute;-->
        <!--        bottom: 0px;-->
        <!--        left: 0px;-->
        <!--        width: 100%;-->
        text-align: right;
        padding-top: 10px;
        }

        .nobody {
        display: inline-block;
        color: #999;
        padding-right: 10px;
        }

        .assignYourself {
        display: inline-block;
        color: #00f;
        cursor: pointer;
        text-decoration: underline;
        }

        <!--        .padding {-->
        <!--        padding: 10px;-->
        <!--        }-->
    </ui:style>

    <g:FlowPanel styleName="{style.container}">
        <g:FlowPanel styleName="{style.left}">
            <v:ResizeSimplePanel ui:field="history" width="400px"/>
            <g:FlowPanel styleName="{style.commentContainer}">
                <g:TextArea ui:field="editor" styleName="{style.editor}"/>
                <g:SimplePanel ui:field="buttons" styleName="{style.buttons}">
                    <g:Button ui:field="create" text="Create" width="200px"/>
                </g:SimplePanel>
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel styleName="{style.right}">
            <g:Grid styleName="stroom-control-grid" width="100%">
                <g:row>
                    <g:customCell>
                        <g:FlowPanel addStyleNames="{style.clickHeading}" ui:field="statusSelection">
                            <g:Label ui:field="statusLabel" width="100%" styleName="{style.clickLabel}"
                                     text="Status"/>
                            <button:SvgButton ui:field="statusIcon"/>
                        </g:FlowPanel>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:SimplePanel ui:field="currentStatusContainer" width="100%"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:HTMLPanel>
                            <hr/>
                        </g:HTMLPanel>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:FlowPanel addStyleNames="{style.clickHeading}" ui:field="assignedToSelection">
                            <g:Label ui:field="assignedToLabel" width="100%" styleName="{style.clickLabel}"
                                     text="Assigned To"/>
                            <button:SvgButton ui:field="assignedToIcon"/>
                        </g:FlowPanel>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:FlowPanel width="100%">
                            <g:FlowPanel ui:field="assignYourselfContainer" width="100%">
                                <g:Label styleName="{style.nobody}">Nobody</g:Label>
                                <g:Label ui:field="assignYourself" styleName="{style.assignYourself}">Assign Yourself</g:Label>
                            </g:FlowPanel>
                            <g:FlowPanel ui:field="currentAssignedToContainer" width="100%">
                                <g:Label ui:field="assignedTo"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:FlowPanel>
    </g:FlowPanel>


