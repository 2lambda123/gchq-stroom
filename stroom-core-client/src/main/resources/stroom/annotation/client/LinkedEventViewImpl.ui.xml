<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:r="urn:import:stroom.widget.layout.client.view"
             xmlns:b="urn:import:stroom.widget.button.client">

    <ui:style>
        .eventList {
        width: 100%;
        height: 100%;
        border: solid;
        }

        .data {
        width: 100%;
        height: 100%;
        border: solid;
        margin-left: 3px;
        }
    </ui:style>

    <r:ResizeFlowPanel width="100%" height="100%">
        <g:DockLayoutPanel unit="PX" width="100%" height="100%">
            <g:north size="20">
                <b:ButtonPanel ui:field="buttonPanel"/>
            </g:north>
            <g:center>
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:west size="200">
                        <r:ResizeSimplePanel ui:field="eventList"
                                             styleName="{style.eventList} stroom-border"/>
                    </g:west>
                    <g:center>
                        <r:ResizeSimplePanel ui:field="data"
                                             styleName="{style.data} stroom-border"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
        </g:DockLayoutPanel>
    </r:ResizeFlowPanel>
</ui:UiBinder>