<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .body {
		width: 100%;
		height: 100%;
    	padding: 5px !important;
    }
    
    .buildInfo {
    	position: absolute;
    	right: 5px;
    	bottom: 5px;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.body} stroom-content">
    <g:SimplePanel ui:field="html" />
    <g:FlowPanel styleName="{style.buildInfo}">
      <g:Label ui:field="userName" />
      <g:Label ui:field="roleName" />
      <g:Label ui:field="buildVersion" />
      <g:Label ui:field="buildDate" />
      <g:Label ui:field="upDate" />
      <g:Label ui:field="nodeName" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
