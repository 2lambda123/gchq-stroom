<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:i="urn:import:stroom.item.client">
  <g:Grid styleName="stroom-control-grid w-100">
    <g:row>
      <g:customCell>
        <g:Label text="Element Id:" />
      </g:customCell>
      <g:customCell>
        <g:Label ui:field="element" addStyleNames="stroom-control-label" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:customCell>
        <g:Label text="Name:" />
      </g:customCell>
      <g:customCell>
        <g:Label ui:field="name" addStyleNames="stroom-control-label" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:customCell>
        <g:Label text="Source:" />
      </g:customCell>
      <g:customCell>
        <i:ItemListBox ui:field="source" addStyleNames="w-100" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:customCell>
        <g:Label text="Value:" />
      </g:customCell>
      <g:customCell>
        <g:SimplePanel ui:field="value" addStyleNames="w-100" />
      </g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder>
 
