<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:s="urn:import:stroom.main.client.view">
    <!-- Add a focus panel as the root so we can catch all keyboard events. -->
    <g:FocusPanel styleName="mainViewImpl-max">
        <g:FlowPanel styleName="mainViewImpl-max">
            <g:SimplePanel ui:field="banner" styleName="mainViewImpl-banner"/>
            <g:FlowPanel ui:field="main" styleName="mainViewImpl-max">
                <g:SimplePanel ui:field="topPanel" styleName="mainViewImpl-topPanel"/>
                <g:SimplePanel styleName="mainViewImpl-bottomPanel">
                    <g:ResizeLayoutPanel ui:field="contentPanel"
                                         styleName="mainViewImpl-contentPanel">
                    </g:ResizeLayoutPanel>
                </g:SimplePanel>
                <s:Spinner ui:field="spinner" styleName="spinner mainViewImpl-spinner"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FocusPanel>
</ui:UiBinder>
