<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FlowPanel addStyleNames="max control__padding-right control__padding-bottom">
        <g:MySplitLayoutPanel vSplits="0.5" styleName="max">
            <g:north size="200">
                <g:SimplePanel ui:field="processorList"
                               addStyleNames="max dashboard-panel"/>
            </g:north>
            <g:center>
                <g:MySplitLayoutPanel vSplits="0.5" addStyleNames="max">
                    <g:north size="200">
                        <g:MaxScrollPanel addStyleNames="max dashboard-panel">
                            <g:SimplePanel ui:field="info"/>
                        </g:MaxScrollPanel>
                    </g:north>
                    <g:center>
                        <g:MaxScrollPanel addStyleNames="max dashboard-panel">
                            <g:SimplePanel ui:field="details"/>
                        </g:MaxScrollPanel>
                    </g:center>
                </g:MySplitLayoutPanel>
            </g:center>
        </g:MySplitLayoutPanel>
    </g:FlowPanel>
</ui:UiBinder>
 
