<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel addStyleNames="max">
        <g:ThinSplitLayoutPanel vSplits="0.5" styleName="max">
            <g:north size="200">
                <g:SimplePanel ui:field="processorList"
                               addStyleNames="max dashboard-panel"/>
            </g:north>
            <g:center>
                <g:ThinSplitLayoutPanel vSplits="0.5" addStyleNames="max">
                    <g:west size="600">
                        <g:MaxScrollPanel addStyleNames="max dashboard-panel">
                            <g:SimplePanel ui:field="info" addStyleNames="info-page"/>
                        </g:MaxScrollPanel>
                    </g:west>
                    <g:center>
                        <g:MaxScrollPanel addStyleNames="max dashboard-panel">
                            <g:SimplePanel ui:field="details"/>
                        </g:MaxScrollPanel>
                    </g:center>
                </g:ThinSplitLayoutPanel>
            </g:center>
        </g:ThinSplitLayoutPanel>
    </g:SimplePanel>
</ui:UiBinder>

