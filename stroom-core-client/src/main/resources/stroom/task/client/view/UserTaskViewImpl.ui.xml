<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HorizontalPanel ui:field="layout" styleName="userTaskView-layout">
        <g:cell>
            <g:FlowPanel>
                <g:Label ui:field="taskName" addStyleNames="userTaskView-taskName"/>
                <g:Label ui:field="taskAge"/>
                <g:Label ui:field="taskStatus"/>
            </g:FlowPanel>
        </g:cell>
        <g:cell>
            <g:Button ui:field="terminate" addStyleNames="userTaskView-terminate" title="Terminate" visible="false"/>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder> 
