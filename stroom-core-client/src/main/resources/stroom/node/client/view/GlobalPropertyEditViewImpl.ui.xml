<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view">
  <g:FlowPanel width="100%">
    <g:Grid ui:field="grid" styleName="stroom-control-grid" width="100%">
      <g:row>
        <g:cell>Name:</g:cell>
        <g:customCell>
          <g:TextBox ui:field="name" width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Description:</g:cell>
        <g:customCell>
          <g:TextArea ui:field="description" width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Value:</g:cell>
        <g:customCell>
          <g:TextArea ui:field="value" width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Value:</g:cell>
        <g:customCell>
          <g:PasswordTextBox ui:field="valuePassword"
            width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Source:</g:cell>
        <g:customCell>
          <g:TextBox ui:field="source" width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Default:</g:cell>
        <g:customCell>
          <g:TextBox ui:field="defaultValue" width="100%" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Requires UI Refresh:</g:cell>
        <g:customCell>
          <tickbox:TickBox ui:field="requireUiRestart" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Requires Restart:</g:cell>
        <g:customCell>
          <tickbox:TickBox ui:field="requireRestart" />
        </g:customCell>
      </g:row>
    </g:Grid>
  </g:FlowPanel>
</ui:UiBinder> 
