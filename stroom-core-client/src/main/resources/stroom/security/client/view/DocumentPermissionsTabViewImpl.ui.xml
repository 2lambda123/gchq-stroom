<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:i="urn:import:stroom.item.client">
    <g:FlowPanel styleName="documentPermissions form max dock-container-vertical">
        <g:FlowPanel styleName="documentPermissionsUsers form dock-max dock-container-vertical">
            <form:FormGroup ui:field="documentPermissionsUsers"
                            identity="documentPermissionsUsers"
                            label="Users"
                            addStyleNames="documentPermissionsUsersFormGrp max">
                <g:SimplePanel ui:field="users"
                               addStyleNames="documentPermissionsUsers dock-max dock-container-vertical"/>
            </form:FormGroup>
            <form:FormGroup identity="permission" label="Permission">
                <i:SelectionBox ui:field="permission" addStyleNames="w-100"/>
            </form:FormGroup>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
