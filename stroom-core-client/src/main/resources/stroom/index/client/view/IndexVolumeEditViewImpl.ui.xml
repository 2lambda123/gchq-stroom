<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="indexVolumeEditNode" label="Node">
            <l:StringListBox ui:field="nodeName" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="indexVolumeEditPath" label="Path">
            <g:TextBox ui:field="path" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="indexVolumeEditState" label="State">
            <l:ItemListBox ui:field="state" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="indexVolumeEditLimit" label="Limit">
            <g:TextBox ui:field="bytesLimit" addStyleNames="w-100"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
