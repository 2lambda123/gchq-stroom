<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:stroom.item.client">
  <g:Grid ui:field="grid" styleName="stroom-control-grid" width="100%">
    <g:row>
      <g:cell>Node:</g:cell>
      <g:customCell>
        <l:StringListBox ui:field="nodeName" width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Path:</g:cell>
      <g:customCell>
        <g:TextBox ui:field="path" width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>State:</g:cell>
      <g:customCell>
        <l:ItemListBox ui:field="state" width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Limit:</g:cell>
      <g:customCell>
        <g:TextBox ui:field="bytesLimit" width="100%" />
      </g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder> 
