<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
  xmlns:l="urn:import:stroom.item.client">
  <g:Grid styleName="stroom-control-grid w-100">
    <g:row>
      <g:cell>Type:</g:cell>
      <g:customCell>
        <l:ItemListBox ui:field="type" addStyleNames="w-100" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Name:</g:cell>
      <g:customCell>
        <g:TextBox ui:field="name" addStyleNames="w-100" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Stored:</g:cell>
      <g:customCell>
        <tickbox:TickBox ui:field="stored" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Indexed:</g:cell>
      <g:customCell>
        <tickbox:TickBox ui:field="indexed" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Positions:</g:cell>
      <g:customCell>
        <tickbox:TickBox ui:field="positions" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Analyser:</g:cell>
      <g:customCell>
        <l:ItemListBox ui:field="analyser" addStyleNames="w-100" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Case Sensitive:</g:cell>
      <g:customCell>
        <tickbox:TickBox ui:field="caseSensitive" />
      </g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder> 
