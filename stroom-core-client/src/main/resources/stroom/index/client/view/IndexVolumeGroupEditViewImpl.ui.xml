<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="indexVolumeGroupEditVolumeGroupName" label="Volume Group Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="indexVolumeGroupEditVolumeIsDefault" label="Is Default Volume Group?">
            <form:HelpHTML>
                The default Volume Group will be used for writing streams if no Volume is explicitly selected.
                For example if no Volume Group is specified in Index Settings, then steams will be written to the
                Volume Group marked as default. Only one Volume Group can be marked as default.
            </form:HelpHTML>
            <tickbox:CustomCheckBox ui:field="isDefaultCheckBox" />
        </form:FormGroup>
        <g:SimplePanel ui:field="list" styleName="dock-max stroom-control"/>
    </g:FlowPanel>
</ui:UiBinder>
