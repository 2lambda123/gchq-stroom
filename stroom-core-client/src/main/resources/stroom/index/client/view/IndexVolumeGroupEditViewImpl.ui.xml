<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <ui:style>
        .max {
        width: 100%;
        height: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="layout" width="100%" height="100%">
        <g:center>
            <v:ResizeSimplePanel ui:field="list" styleName="{style.max}"/>
        </g:center>
        <g:north size="24">
            <g:Grid ui:field="grid" styleName="stroom-control-grid" width="100%">
                <g:row>
                    <g:cell>Volume Group Name:</g:cell>
                    <g:customCell>
                        <g:TextBox ui:field="name" width="100%"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder> 
