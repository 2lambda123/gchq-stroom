<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="stroom-control-page">
        <form:FormRow identity="feedSettingsDescription" label="Description">
            <g:TextArea ui:field="description" width="400px"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsClassification" label="Classification">
            <g:TextBox ui:field="classification" width="400px"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsReferenceFeed" label="Reference Feed">
            <tickbox:CustomCheckBox ui:field="reference"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsFeedStatus" label="Feed Status">
            <l:ItemListBox ui:field="feedStatus"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsReceivedType" label="Received Type">
            <l:StringListBox ui:field="receivedType"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsDataEncoding" label="Data Encoding">
            <l:StringListBox ui:field="dataEncoding"/>
        </form:FormRow>
        <form:FormRow identity="feedSettingsContextEncoding" label="Context Encoding">
            <l:StringListBox ui:field="contextEncoding"/>
        </form:FormRow>
    </g:FlowPanel>
</ui:UiBinder> 
