<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
  xmlns:l="urn:import:stroom.item.client">
  <g:FlowPanel styleName="stroom-control-page">
    <g:Grid styleName="stroom-control-grid">
      <g:row>
        <g:cell>Description:</g:cell>
        <g:customCell>
          <g:TextArea ui:field="description" width="400px" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Classification:</g:cell>
        <g:customCell>
          <g:TextBox ui:field="classification" width="400px" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Reference Feed:</g:cell>
        <g:customCell>
          <tickbox:TickBox ui:field="reference" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Feed Status:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="feedStatus" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Stream Type:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="streamType" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Data Encoding:</g:cell>
        <g:customCell>
          <l:StringListBox ui:field="dataEncoding" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Context Encoding:</g:cell>
        <g:customCell>
          <l:StringListBox ui:field="contextEncoding" />
        </g:customCell>
      </g:row>
      <g:row>
        <g:cell>Retention Period:</g:cell>
        <g:customCell>
          <l:ItemListBox ui:field="retentionAge" />
        </g:customCell>
      </g:row>
    </g:Grid>
  </g:FlowPanel>
</ui:UiBinder> 
