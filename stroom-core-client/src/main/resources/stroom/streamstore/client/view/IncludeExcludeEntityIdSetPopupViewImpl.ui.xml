<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:i="urn:import:stroom.item.client">

  <ui:style>
    .table {
    	width: 100%;
    	height: 100%;
    }
    
    .row {
    	position: relative;
    	width: 100%;
    	height: 50%;
    }
    
    .container {
    	position: absolute;
    	left: 0px;
    	right: 0px;
    	top: 16px;
    	bottom: 0px;
    	scroll: auto;
    }
    
    .label {
    	width: 100%;
    	white-space: nowrap;
    	padding-top: 2px;
    }
    
    .textArea {
    	width: 100%;
    	height: 100%;
    }
  </ui:style>

  <g:FlowPanel styleName="{style.table}">
    <g:FlowPanel styleName="{style.row}">
      <g:Label text="Include:" styleName="{style.label}" />
      <g:FlowPanel ui:field="includes" styleName="stroom-border stroom-content {style.container}" />
    </g:FlowPanel>
    <g:FlowPanel styleName="{style.row}">
      <g:Label text="Exclude:" styleName="{style.label}" />
      <g:FlowPanel ui:field="excludes" styleName="stroom-border stroom-content {style.container}" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder> 
