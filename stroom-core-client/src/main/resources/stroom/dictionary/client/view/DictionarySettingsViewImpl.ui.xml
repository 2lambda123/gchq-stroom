<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:view="urn:import:stroom.widget.layout.client.view">
    <view:ResizeSimplePanel styleName="stroom-control-page" width="100%" height="100%">
        <g:DockLayoutPanel unit="PX" width="100%" height="100%">
            <g:north size="200">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:north size="20">
                        <g:Label text="Description:" addStyleNames="dictionarySettingsViewImpl-label" width="100%"/>
                    </g:north>
                    <g:center>
                        <g:TextArea ui:field="description" width="100%" height="100%"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:north>
            <g:center>
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:north size="20">
                        <g:Label text="Imports:" addStyleNames="dictionarySettingsViewImpl-label" width="100%"/>
                    </g:north>
                    <g:center>
                        <view:ResizeSimplePanel ui:field="imports" width="100%" height="100%"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
        </g:DockLayoutPanel>
    </view:ResizeSimplePanel>
</ui:UiBinder>
