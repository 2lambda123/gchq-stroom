<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:Grid styleName="stroom-control-grid" width="100%">
    <g:row>
      <g:cell>Id:</g:cell>
      <g:customCell>
        <g:Label ui:field="id" addStyleNames="stroom-control-label" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Name:</g:cell>
      <g:customCell>
        <g:TextBox ui:field="name" width="100%" />
      </g:customCell>
    </g:row>
    <g:row>
      <g:cell>Data Source:</g:cell>
      <g:customCell>
        <g:SimplePanel ui:field="dataSource" width="100%" />
      </g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder> 
