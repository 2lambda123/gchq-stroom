<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.tickbox.client.view">
    <g:Grid styleName="stroom-control-grid" width="100%">
        <g:row>
            <g:cell>Id:</g:cell>
            <g:customCell>
                <g:Label ui:field="id" addStyleNames="stroom-control-label"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Name:</g:cell>
            <g:customCell>
                <g:TextBox ui:field="name" width="100%"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Data Source:</g:cell>
            <g:customCell>
                <g:SimplePanel ui:field="dataSource" width="100%"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Query On Open:</g:cell>
            <g:customCell>
                <v:TickBox ui:field="queryOnOpen" width="100%"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Auto Refresh:</g:cell>
            <g:customCell>
                <v:TickBox ui:field="autoRefresh" width="100%"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:cell>Refresh Interval:</g:cell>
            <g:customCell>
                <g:TextBox ui:field="refreshInterval" width="100%"/>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder> 
