<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view"
             xmlns:btn="urn:import:stroom.widget.button.client">
  <ui:style>
  .button {
      float: left;
  }

<!--  .buttonPanel {-->
<!--      display: inline-block;-->
<!--      width: 24px;-->
<!--  }-->

  .resizePanel {
      display: block;
  }

  .editorContainer {
  	width: 100%;
    height: 100%;
    padding-top: 2px;
    background-color: white;
  }
  </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:center>
            <v:ResizeFlowPanel
                    width="100%"
                    height="100%"
                    addStyleNames="{style.resizePanel}" >

                <btn:ButtonPanel ui:field="buttonPanel" />

                <v:ResizeSimplePanel ui:field="editorContainer"
                                     width="100%"
                                     height="100%"
                                     addStyleNames="{style.editorContainer}"/>
            </v:ResizeFlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
