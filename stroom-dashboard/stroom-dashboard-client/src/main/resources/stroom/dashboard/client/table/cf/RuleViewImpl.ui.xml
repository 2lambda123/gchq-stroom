<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
>
    <g:FlowPanel styleName="max default-min-sizes dock-container-vertical">
        <g:SimplePanel styleName="dock-min ruleView-bottom">
            <g:Grid ui:field="grid" styleName="stroom-control-grid w-100">
                <g:row>
                    <g:cell>Hide:</g:cell>
                    <g:customCell>
                        <tickbox:TickBox ui:field="hide"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Background Color:</g:cell>
                    <g:customCell>
                        <g:TextBox ui:field="backgroundColor" addStyleNames="w-100"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Text Color:</g:cell>
                    <g:customCell>
                        <g:TextBox ui:field="textColor" addStyleNames="w-100"/>
                    </g:customCell>
                </g:row>
                <g:row>
                    <g:cell>Enabled:</g:cell>
                    <g:customCell>
                        <tickbox:TickBox ui:field="enabled"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:SimplePanel>
        <g:SimplePanel ui:field="expression" styleName="dock-max stroom-border"/>
    </g:FlowPanel>
</ui:UiBinder>