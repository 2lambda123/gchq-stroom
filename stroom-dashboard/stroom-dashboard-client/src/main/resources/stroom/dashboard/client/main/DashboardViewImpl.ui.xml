<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <v:ResizeFlowPanel styleName="max dashboardViewImpl-dashboard">
        <g:SimplePanel styleName="dashboardViewImpl-bar stroom-content-container">
            <g:Grid width="100%" height="100%">
                <g:row>
                    <g:customCell styleName="dashboardViewImpl-left">
                        <g:FlowPanel ui:field="left" styleName="dashboardViewImpl-leftInner"/>
                    </g:customCell>
                    <g:customCell styleName="dashboardViewImpl-middle">
                        <g:FlowPanel styleName="dashboardViewImpl-paramsContainer">
                            <g:TextBox ui:field="params" styleName="dashboardViewImpl-params"/>
                        </g:FlowPanel>
                    </g:customCell>
                    <g:customCell styleName="dashboardViewImpl-right">
                        <g:FlowPanel ui:field="right" styleName="dashboardViewImpl-rightInner"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:SimplePanel>
        <v:ResizeSimplePanel ui:field="content" styleName="dashboardViewImpl-content stroom-content-container"/>
    </v:ResizeFlowPanel>
</ui:UiBinder>
