<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="pt-3 max default-min-sizes form">
        <form:FormGroup identity="basicQuerySettingsId" label="Id">
            <g:Label ui:field="id" addStyleNames="w-100 stroom-control-label"/>
        </form:FormGroup>
        <form:FormGroup identity="basicQuerySettingsName" label="Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="basicQuerySettingsDataSource" label="Data Source">
            <g:SimplePanel ui:field="dataSource" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="basicQuerySettingsQueryOnOpen" label="Query On Open">
            <v:CustomCheckBox ui:field="queryOnOpen"/>
        </form:FormGroup>
        <form:FormGroup identity="basicQuerySettingsAutoRefresh" label="Auto Refresh">
            <v:CustomCheckBox ui:field="autoRefresh"/>
        </form:FormGroup>
        <form:FormGroup identity="basicQuerySettingsRefreshInterval" label="Refresh Interval">
            <g:TextBox ui:field="refreshInterval" addStyleNames="w-100"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
