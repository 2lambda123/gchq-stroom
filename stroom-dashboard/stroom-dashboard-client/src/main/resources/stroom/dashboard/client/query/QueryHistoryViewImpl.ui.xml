<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:stroom.cell.list.client">
	<ui:style>
		.cellList {
			position: absolute;
			min-width: 100%;
		}
	</ui:style>

	<g:MySplitLayoutPanel width="100%" height="100%">
		<g:south size="120">
			<g:ScrollPanel ui:field="bottom" styleName="max stroom-content stroom-border" />
		</g:south>
		<g:center>
			<g:ScrollPanel ui:field="top" styleName="max stroom-content stroom-border">
				<l:CustomCellList ui:field="cellList" styleName="{style.cellList}" />
			</g:ScrollPanel>
		</g:center>
	</g:MySplitLayoutPanel>
</ui:UiBinder>
