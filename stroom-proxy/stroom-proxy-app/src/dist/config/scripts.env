#!/usr/bin/env bash
#
# Configures environment variables used by the Stroom management
# scripts. E.g. ./start.sh

# These paths are relative to the file sourcing this one.
export PATH_TO_APP_LOG=logs/app/app.log
export PATH_TO_JAR=bin/stroom-proxy-app-all.jar
export STROOM_PID_FILE=bin/stroom-proxy.pid
export PATH_TO_CONFIG=config/config.yml

# This must match the admin port in config.yml
export STROOM_ADMIN_PORT=8091

export JAVA_OPTS="-Xms512m -Xmx2048m"
