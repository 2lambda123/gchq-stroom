<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:center>
            <g:MySplitLayoutPanel width="100%" height="100%">
                <g:north size="200">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:north size="15">
                            <g:Label text="Group Membership:" width="100%"/>
                        </g:north>
                        <g:center>
                            <v:ResizeSimplePanel ui:field="userGroups" width="100%" height="100%"/>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:north>
                <g:center>
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:north size="15">
                            <g:Label text="Application Permissions:" width="100%"/>
                        </g:north>
                        <g:center>
                            <v:ResizeSimplePanel ui:field="appPermissions" styleName="stroom-border" width="100%"
                                                 height="100%"/>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
            </g:MySplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>


</ui:UiBinder> 
