<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <g:MySplitLayoutPanel width="100%" height="100%">
        <g:north size="200">
            <g:DockLayoutPanel unit="PX" styleName="max">
                <g:north size="15">
                    <g:Label ui:field="usersLabel" text="Users:" width="100%"/>
                </g:north>
                <g:center>
                    <v:ResizeSimplePanel ui:field="users" styleName="max"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PX" styleName="max">
                <g:north size="15">
                    <g:Label ui:field="permissionsLabel" text="Permissions:" width="100%"/>
                </g:north>
                <g:center>
                    <g:ScrollPanel ui:field="permissions" styleName="max stroom-content stroom-border"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:MySplitLayoutPanel>
</ui:UiBinder> 
