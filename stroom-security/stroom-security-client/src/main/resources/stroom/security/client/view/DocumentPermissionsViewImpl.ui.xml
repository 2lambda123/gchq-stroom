<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view" xmlns:l="urn:import:stroom.item.client">
    <g:DockLayoutPanel ui:field="layout" width="100%" height="100%">
        <g:center>
            <v:ResizeSimplePanel ui:field="tabs" styleName="max"/>
        </g:center>

        <g:south size="55">
            <g:DockLayoutPanel ui:field="innerLayout" width="100%" height="100%">
                <g:north size="25">
                    <g:Grid ui:field="cascadeGrid" styleName="stroom-control-grid documentPermissionsViewImpl-cascade">
                        <g:row>
                            <g:cell>Cascade:</g:cell>
                            <g:customCell>
                                <l:ItemListBox ui:field="cascade"/>
                            </g:customCell>
                        </g:row>
                    </g:Grid>
                </g:north>
                <g:south size="25">
                    <g:Button width="100"
                              styleName="gwt-Button documentPermissionsViewImpl-copyPermissionsFromParentButton"
                              ui:field="copyPermissionsFromParentButton" text="Copy permissions from parent"/>
                </g:south>
            </g:DockLayoutPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder> 
