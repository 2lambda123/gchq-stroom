<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:MySplitLayoutPanel styleName="max">
        <g:north size="200">
            <g:FlowPanel styleName="dock-container-vertical">
                <g:Label ui:field="usersLabel" text="Users:" styleName="dock-min"/>
                <g:SimplePanel ui:field="users" styleName="dock-max"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:MySplitLayoutPanel styleName="max">
                <g:north size="110">
                    <g:FlowPanel styleName="dock-container-vertical">
                        <g:Label ui:field="permissionsLabel" text="Permissions:" styleName="dock-min"/>
                        <g:ScrollPanel ui:field="permissions" styleName="dock-max stroom-control"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:FlowPanel styleName="dock-container-vertical">
                        <g:Label ui:field="createPermissionsLabel" text="Create Permissions:" styleName="dock-min"/>
                        <g:ScrollPanel ui:field="createPermissions" styleName="dock-max stroom-control"/>
                    </g:FlowPanel>
                </g:center>
            </g:MySplitLayoutPanel>
        </g:center>
    </g:MySplitLayoutPanel>
</ui:UiBinder> 
