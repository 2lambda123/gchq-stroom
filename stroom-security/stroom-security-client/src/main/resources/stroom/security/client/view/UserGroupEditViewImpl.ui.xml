<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.layout.client.view">
    <ui:style>
        .border {
        border: solid;
        }
    </ui:style>

    <g:MySplitLayoutPanel width="100%" height="100%">
        <g:north size="200">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:north size="15">
                    <g:Label text="User Membership:" width="100%"/>
                </g:north>
                <g:center>
                    <v:ResizeSimplePanel ui:field="users" width="100%" height="100%"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:north size="15">
                    <g:Label text="Application Permissions:" width="100%"/>
                </g:north>
                <g:center>
                    <v:ResizeSimplePanel ui:field="appPermissions" styleName="{style.border} stroom-border" width="100%"
                                         height="100%"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:MySplitLayoutPanel>
</ui:UiBinder> 
