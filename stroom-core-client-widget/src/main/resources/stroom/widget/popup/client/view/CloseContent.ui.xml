<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max dock-container-vertical">
        <g:SimplePanel ui:field="content" styleName="dialog-content"/>
        <g:FlowPanel styleName="dialog-buttons">
            <b:Button ui:field="close" addStyleNames="allow-focus Button--contained-primary" text="Close"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 
