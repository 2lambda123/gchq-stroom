<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DockLayoutPanel unit="PX" styleName="max">
        <g:center>
            <g:ResizeLayoutPanel ui:field="content" styleName="max"/>
        </g:center>
        <g:south size="35">
            <g:FlowPanel styleName="resizableAcceptRejectContent-buttons">
                <g:Button ui:field="accept" styleName="resizableAcceptRejectContent-button resizableAcceptRejectContent-accept" text="Accept"/>
                <g:Button ui:field="reject" styleName="resizableAcceptRejectContent-button resizableAcceptRejectContent-reject" text="Reject"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
