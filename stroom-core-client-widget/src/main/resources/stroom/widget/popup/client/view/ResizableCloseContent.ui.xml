<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.layout {
		width: 100%;
		height: 100%;
	}
	
	.content {
		width: 100%;
		height: 100%;
	}
	
	.buttons {
		width: 100%;
		text-align: right;
		padding-top: 5px;
	}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="{style.layout}">
		<g:center>
			<g:ResizeLayoutPanel ui:field="content"
				styleName="{style.content}" />
		</g:center>
		<g:south size="26">
			<g:FlowPanel styleName="{style.buttons}">
				<g:Button ui:field="close" text="Close" />
			</g:FlowPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 
