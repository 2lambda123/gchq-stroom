             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:DockLayoutPanel unit="PX" styleName="max">
        <g:center>
            <g:ResizeLayoutPanel ui:field="content"
                                 styleName="max"/>
        </g:center>
        <g:south size="26">
            <g:FlowPanel styleName="resizableCloseContent-buttons">
                <g:Button ui:field="close" text="Close"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder> 
