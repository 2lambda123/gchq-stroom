<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FlowPanel styleName="max dock-container-vertical">
        <g:SimplePanel ui:field="content" styleName="dock-max"/>
        <g:FlowPanel styleName="dock-min acceptRejectContent-layout">
            <g:Button ui:field="accept" styleName="acceptRejectContent-button acceptRejectContent-accept"
                      text="Accept"/>
            <g:Button ui:field="reject" styleName="acceptRejectContent-button acceptRejectContent-reject"
                      text="Reject"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 
