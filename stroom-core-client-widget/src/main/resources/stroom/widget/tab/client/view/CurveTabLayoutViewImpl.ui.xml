<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tab="urn:import:stroom.widget.tab.client.view">
    <g:FlowPanel styleName="curveTabLayoutViewImpl-layout">
        <g:SimplePanel ui:field="layerContainerOuter"
                       styleName="curveTabLayoutViewImpl-layerContainerOuter">
            <tab:LayerContainerImpl ui:field="layerContainer" styleName="stroom-main-content-container"/>
        </g:SimplePanel>
        <g:SimplePanel ui:field="tabBarOuter"
                       styleName="curveTabLayoutViewImpl-abBarOuter">
            <tab:CurveTabBar ui:field="tabBar"/>
        </g:SimplePanel>
    </g:FlowPanel>
</ui:UiBinder> 
