<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:p="urn:import:stroom.data.pager.client" xmlns:b="urn:import:stroom.widget.button.client">
    <ui:style>
        .max {
        width: 100%;
        height: 100%;
        }

        .dock-container-horizontal {
        display: flex;
        }

        .dock-container-vertical {
        display: flex;
        flex-direction: column;
        }

        .dock-min {
        }

        .dock-max {
        flex-grow: 1;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.max} stroom-content">
        <g:center>
            <c:DataGrid ui:field="dataGrid" addStyleNames="{style.max}"/>
        </g:center>
        <g:north size='20'>
            <g:FlowPanel width="100%" addStyleNames="{style.dock-container-horizontal}">
                <b:ButtonPanel ui:field="buttonPanel" addStyleNames="{style.dock-max}"/>
                <p:Pager ui:field="pager" addStyleNames="{style.dock-min}"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
