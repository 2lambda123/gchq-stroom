<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="statsSettingsDescription" label="Description">
            <g:TextArea ui:field="description" width="400px"/>
        </form:FormGroup>
        <form:FormGroup identity="statsSettingsStatisticType" label="Statistic Type">
            <l:ItemListBox ui:field="statisticType"/>
        </form:FormGroup>
        <form:FormGroup identity="statsSettingsFinestPrecision" label="Finest Precision">
            <l:ItemListBox ui:field="precision"/>
        </form:FormGroup>
        <form:FormGroup identity="statsSettingsRollUpType" label="Roll Up Type">
            <l:ItemListBox ui:field="rollUpType"/>
        </form:FormGroup>
        <form:FormGroup identity="statsSettingsEnabled" label="Enabled">
            <tickbox:CustomCheckBox ui:field="enabled"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
